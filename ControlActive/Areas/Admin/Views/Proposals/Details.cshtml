@model ControlActive.Models.Proposal

@{
    ViewData["Title"] = "Details";
}

<h1>Детально</h1>

<div>
    <h4>Предложение</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Название предложения
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProposalName)
        </dd>
        <dt class = "col-sm-2">
         Актвиность
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ProposalId">Изменить</a> |
    <a asp-action="Index">Назад</a>
</div>
