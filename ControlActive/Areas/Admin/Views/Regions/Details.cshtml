@model ControlActive.Models.Region

@{
    ViewData["Title"] = "Details";
}

<h1>Детально</h1>

<div>
    <h4>Регион</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Регион
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RegionName)
        </dd>
        <dt class = "col-sm-2">
            Активность
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Status)
