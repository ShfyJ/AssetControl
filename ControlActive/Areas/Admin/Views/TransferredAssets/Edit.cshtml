                        </label>
                        <div class="col-md-6 col-sm-6 ">
                            <input type="text" asp-for="AgreementNumber" class="form-control" required="required" />
                            <span asp-validation-for="AgreementNumber" class="text-danger"></span>
                        </div>
                    </div>
