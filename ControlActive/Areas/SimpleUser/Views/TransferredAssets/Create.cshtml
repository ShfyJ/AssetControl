                                <label class="col-form-label pt-0">@Localizer["AgreementFileId"]:<span class="font-danger">*</span></label>
                                <input type="file"  class="form-control" asp-for="AgreementFileId" accept=".pdf, application/pdf"  name="agreementFile" value="default" required>
