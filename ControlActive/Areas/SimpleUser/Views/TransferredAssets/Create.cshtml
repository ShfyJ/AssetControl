                <div class="f1-progress">
                    <div class="f1-progress-line" data-now-value="12.5" data-number-of-steps="4"></div>
                </div>
                <div class="f1-step active">
                    <div class="f1-step-icon"><i class="fa fa-check"></i></div>
                    <p>1-Қадам</p>
                </div>
                <div class="f1-step">
                    <div class="f1-step-icon"><i class="fa fa-check"></i></div>
                    <p>2-Қадам</p>
                </div>
                <div class="f1-step">
                    <div class="f1-step-icon"><i class="fa fa-check"></i></div>
                    <p>3-Қадам</p>
                </div>
                <div class="f1-step">
                    <div class="f1-step-icon"><i class="fa fa-check"></i></div>
                    <p>4-Қадам</p>
                </div>
                </div>
