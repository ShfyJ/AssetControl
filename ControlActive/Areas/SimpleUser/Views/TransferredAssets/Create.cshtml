                    </div>
                   
           
                <div class="f1-buttons">
                    <button class="btn btn-primary btn-previous" type="button">@Localizer["Previous"]</button>
                    <button class="btn btn-primary btn-next" type="button">@Localizer["Next"]</button>
                </div>
                </fieldset>
                <fieldset>
                    
                    <div class="mb-2">
                        <label> @Localizer["AgreementNumber"]</label>
                        <input type="text" asp-for="AgreementNumber" class="form-control" required="required" autocomplete="off" />
                        <span asp-validation-for="AgreementNumber" class="text-danger"></span>
                    </div>
                    <div class="mb-2">
                        <label> @Localizer["AgreementDate"]</label>
                        <input type="text" asp-for="AgreementDate" class="datepicker-here form-control" required="required" autocomplete="off" />
                        <span asp-validation-for="AgreementDate" class="text-danger"></span>
                    </div>
               
