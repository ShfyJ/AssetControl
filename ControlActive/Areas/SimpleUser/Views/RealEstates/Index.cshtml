@model IEnumerable<ControlActive.Models.RealEstate>
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{

    ViewData["Title"] = "Index";


}

<style>

    #edit:hover {
        color: white;
    }

    #delete:hover {
        color: white;
    }

    #send:hover {
        color: white;
    }

    .swal-text {
        background-color: #FEFAE3;
        padding: 17px;
        border: 1px solid #F0E1A1;
        display: block;
        margin: 22px;
        text-align: center;
        color: #61534e;
    }

    #profile-tab {
        border-color: #405e7d;
        border-style:solid;
        color: black;
    }

    #home-tab {
        border-color: #6c757d;
        
        color: black;
    }


    #myTab a:hover span.fa-close {
        color: #ff0000;
    }
    #myTab a.active span.fa-close {
        color: #ff0000;
    }
    #myTab a.active span.fa-check-double {
        color: #32a852;
    }
    #myTab a:hover span.fa-check-double {
        color: #32a852;
    }


</style>
<br />

<div class="clearfix"></div>
<div class="row">
    <div class="col-sm-12 col-xl-12 xl-100">
        <div class="card">
            <div class="card-header pb-0">
                <h5>@Localizer["title"]</h5><small>@Localizer["titleLittle"]</small> <br><br />
                <p>
                    <a class="btn btn-secondary" asp-action="Create" style="background-color:darkcyan   "><span class="fas fa-plus"></span> @Localizer["create"]</a>
                </p>
            </div>
            <div class="card-body">
                <ul class="nav nav-tabs border-tab nav-secondary nav-left" id="danger-tab" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link active" id="danger-home-tab" data-bs-toggle="tab" href="#danger-home" role="tab" aria-controls="danger-home" aria-selected="true"><i class="icofont icofont-ui-home"></i>@Localizer["Unsent"]</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="profile-danger-tab" data-bs-toggle="tab" href="#danger-profile" role="tab" aria-controls="danger-profile" aria-selected="false"><i class="icofont icofont-man-in-glasses"></i>@Localizer["Sent"]</a>
                    </li>
                </ul>
                <div class="tab-content" id="danger-tabContent">
                    <div class="tab-pane fade show active" id="danger-home" role="tabpanel" aria-labelledby="danger-home-tab">
                        <div class="dt-ext table-responsive">

                            <table id="myTable" class="table display table-striped table-bordered dt-responsive nowrap" style=" width:100%">
                                <thead>
                                    <tr>
                                        <th>@Localizer["RealEstateName"]</th>
                                        <th>@Localizer["CadastreNumber"]</th>
                                        <th>@Localizer["CadastreRegDate"]</th>
                                        <th>@Localizer["CommisioningDate"]</th>
                                        <th>@Localizer["Activity"]</th>
                                        
                                        <th>@Localizer["RegionId"]</th>
                                        <th>@Localizer["DistrictId"]</th>
                                        <th>@Localizer["Address"]</th>
                                        <th>@Localizer["AssetHolderName"]</th>
                                        
                                        <th>@Localizer["BuildingArea"] (кв.м.)</th>
                                        <th>@Localizer["FullArea"] (га)</th>
                                        <th>@Localizer["Infrastructures"]</th>
                                        <th>@Localizer["NumberOfEmployee"]</th>
                                      
                                     
                                        <th>@Localizer["MaintenanceCostForYear"]</th>
                                        <th>@Localizer["InitialCostOfObject"]</th>
                                        <th>@Localizer["Wear"]</th>
                                        <th>@Localizer["ResidualValueOfObject"]</th>
                                        <th>@Localizer["ProposalId"]</th>

                                        <th>@Localizer["Comments"]</th>
                                        <th><i class="fa fa-file-pdf-o"></i> @Localizer["CadastreFile"]</th>
                                        <th><i class="fa fa-file-picture-o"></i> @Localizer["Pictures"]</th>
                                        <th><i class="fa fa-gears"></i></th>
                                       
                                    </tr>
                                </thead>

                            </table>
                        </div>
                    </div>
                    <div class="tab-pane fade" id="danger-profile" role="tabpanel" aria-labelledby="profile-danger-tab">
                        <div class="dt-ext table-responsive">

                            <table id="myTable2" class="table display table-striped table-bordered dt-responsive nowrap" style=" width:100%">
                                <thead>
                                    <tr>
                                        <th>@Localizer["RealEstateName"]</th>
                                        <th>@Localizer["CadastreNumber"]</th>
                                        <th>@Localizer["CadastreRegDate"]</th>
                                        <th>@Localizer["CommisioningDate"]</th>
                                        <th>@Localizer["Activity"]</th>
                                        
                                        <th>@Localizer["RegionId"]</th>
                                        <th>@Localizer["DistrictId"]</th>
                                        <th>@Localizer["Address"]</th>
                                        <th>@Localizer["AssetHolderName"]</th>
                                        
                                        <th>@Localizer["BuildingArea"] (кв.м.)</th>
                                        <th>@Localizer["FullArea"] (га)</th>
                                        <th>@Localizer["Infrastructures"]</th>
                                        <th>@Localizer["NumberOfEmployee"]</th>
                                      
                                     
                                        <th>@Localizer["MaintenanceCostForYear"]</th>
                                        <th>@Localizer["InitialCostOfObject"]</th>
                                        <th>@Localizer["Wear"]</th>
                                        <th>@Localizer["ResidualValueOfObject"]</th>
                                        <th>@Localizer["ProposalId"]</th>

                                        <th>@Localizer["Comments"]</th>
                                        <th><i class="fa fa-file-pdf-o"></i> @Localizer["CadastreFile"]</th>
                                        <th><i class="fa fa-file-picture-o"></i> @Localizer["Pictures"]</th>
                                        <th><i class="fa fa-gears"></i></th>
                                    </tr>
                                </thead>


                            </table>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>

</div>


<p id="success" style="visibility:hidden">@ViewBag.Success</p>
<p id="editSuccess" style="visibility:hidden">@ViewBag.EditSuccess</p>

@section Scripts{
    <script src="~/js/realEstate.js"></script>

    <script>

        

        //tabs change color
        
    </script>

}





