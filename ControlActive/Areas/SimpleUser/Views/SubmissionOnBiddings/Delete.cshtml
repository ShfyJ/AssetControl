@model ControlActive.Models.SubmissionOnBidding
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = "Delete";
}

<h1>@Localizer["Delete"]</h1>

<h3>@Localizer["Sure"]Are you sure you want to delete this?</h3>
<div>
    <h4>@Localizer["Title"]</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Localizer["TradingPlatformName"] 
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TradingPlatformName)
        </dd>
        <dt class="col-sm-2">
            @Localizer["AmountOnBidding"] 
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AmountOnBidding)
        </dd>
        <dt class="col-sm-2">
            @Localizer["BiddingExposureDate"] 
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BiddingExposureDate)
        </dd>
        <dt class="col-sm-2">
            @Localizer["ExposureTime"] 
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ExposureTime)
        </dd>
        <dt class="col-sm-2">
            @Localizer["ActiveValue"] 
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ActiveValue)
        </dd>
        <dt class="col-sm-2">
            @Localizer["BiddingHoldDate"] 
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BiddingHoldDate)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="SubmissionOnBiddingId" />
        <input type="submit" value="@Localizer["Delete"]" class="btn btn-danger" /> |
        <a asp-action="Index">@Localizer["Back"]</a>
    </form>
</div>
