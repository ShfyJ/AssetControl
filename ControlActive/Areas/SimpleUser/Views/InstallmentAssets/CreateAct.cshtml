@model ControlActive.Models.InstallmentStep2
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = "Create";
}

<div class="page-title">
    <div class="title_left">
        <h3>@Localizer["AktStep2"] @Localizer["Obsh"]</h3>
    </div>


</div>
<div class="clearfix"></div>
<div class="row">
    <div class="col-md-12 col-sm-12 ">
        <div class="x_panel">
            <div class="x_title">
                <a class="btn btn-outline-secondary" type="button" asp-controller="InstallmentAssets" asp-action="Index"><i class="fas fa-backward"></i>@Localizer["Back"]</a>

                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <br />
                <form id="demo-form2" data-parsley-validate class="form-horizontal form-label-left" method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    @if (ViewBag.Target == 1)
                    {
                        <div class="item form-group">
                            <label class="control-label col-md-3 col-sm-3 label-align">
                                @Localizer["RealEstates"]  <span class="required">*</span>
                            </label>
                            <div class="col-md-6 col-sm-6 ">
                                <input name="name" class="form-control" required="required" value=ViewBag.RealEstate readonly />

                            </div>
                        </div>
                    }
                    @if (ViewBag.Target == 2)
                    {
                        <div class="item form-group">
                            <label class="control-label col-md-3 col-sm-3 label-align">
                                @Localizer["Shares"]   <span class="required">*</span>
                            </label>
                            <div class="col-md-6 col-sm-6 ">
                                <input name="name" class="form-control" required="required" value=ViewBag.Share readonly />

                            </div>
                        </div>
                    }

                    <div class="item form-group">
                        <label class="control-label col-md-3 col-sm-3 label-align">
                            @Localizer["ActAndAssetDate"]  <span class="required">*</span>
                        </label>

                        <div class="col-md-6 col-sm-6 ">
                            <input type="text" asp-for="ActAndAssetDate" class="date-picker form-control" placeholder="dd-mm-yyyy" required="required" onfocus="this.type='date'" onmouseover="this.type='date'" onclick="this.type='date'" onblur="this.type='text'" onmouseout="timeFunctionLong(this)">
                            <span asp-validation-for="ActAndAssetDate" class="text-danger"></span>
                            <script>
                                function timeFunctionLong(input) {
                                    setTimeout(function () {
                                        input.type = 'text';
                                    }, 60000);
                                }
                            </script>
                        </div>
                    </div>
                    <div class="item form-group">
                        <label class="control-label col-md-3 col-sm-3 label-align">
                            @Localizer["ActAndAssetNumber"]  <span class="required">*</span>
                        </label>
                        <div class="col-md-6 col-sm-6 ">
                            <input type="text" asp-for="ActAndAssetNumber" class="form-control" required="required" />
                            <span asp-validation-for="ActAndAssetNumber" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="item form-group">
                        <label class="control-label col-md-3 col-sm-3 label-align">
                            @Localizer["ActAndAssetFileId"]  <span class="required">*</span>
                        </label>
                        <div class="col-md-6 col-sm-6 ">
                            <input type="file" asp-for="ActAndAssetFileId" name="actAndAssetFile" accept=".pdf, application/pdf" class="form-control" value="default" required />
                        </div>
                    </div>
                    <div class="ln_solid"></div>

                    <input name="installmentId" value="@ViewBag.Id" readonly hidden />

                    <div class="item form-group">
                        <div class="col-md-6 col-sm-6 offset-md-3">
                            @*<button class="btn btn-primary" asp-controller="InstallmentAssets" asp-action="Index" type="button">@Localizer["Back"]</button>*@
                            <button type="submit" asp-controller="InstallmentAssets" asp-action="CreateAct" value="Create" class="btn btn-success">@Localizer["Save"]</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

