@page
@model ControlActive.Areas.Identity.Pages.Account.RenewPasswordModel
@{
    ViewData["Title"] = "Renew password";
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="author" content="ung">
    <link rel="icon" href="~/assets/images/logo/logo-icon.png" type="image/x-icon">
    <link rel="shortcut icon" href="~/assets/images/logo/logo-icon.png" type="image/x-icon">
    <title>Control Assets </title>
    <!-- Google font-->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin="">
    <link href="https://fonts.googleapis.com/css2?family=Rubik:ital,wght@0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,300;1,400;1,500;1,600;1,700;1,800;1,900&amp;display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&amp;display=swap" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="~/assets/css/vendors/font-awesome.css">
    <!-- ico-font-->
    <link rel="stylesheet" type="text/css" href="~/assets/css/vendors/icofont.css">
    <!-- Themify icon-->
    <link rel="stylesheet" type="text/css" href="~/assets/css/vendors/themify.css">
    <!-- Flag icon-->
    <link rel="stylesheet" type="text/css" href="~/assets/css/vendors/flag-icon.css">
    <!-- Feather icon-->
    <link rel="stylesheet" type="text/css" href="~/assets/css/vendors/feather-icon.css">
    <!-- Plugins css start-->
    <!-- Plugins css Ends-->
    <!-- Bootstrap css-->
    <link rel="stylesheet" type="text/css" href="~/assets/css/vendors/bootstrap.css">
    <!-- App css-->
    <link rel="stylesheet" type="text/css" href="~/assets/css/style.css">
    <link id="color" rel="stylesheet" href="~/assets/css/color-1.css" media="screen">
    <!-- Responsive css-->
    <link rel="stylesheet" type="text/css" href="~/assets/css/responsive.css">
</head>
<body>
    <!-- Loader starts-->
    <div class="loader-wrapper">
        <div class="loader">
            <div class="loader-bar"></div>
            <div class="loader-bar"></div>
            <div class="loader-bar"></div>
            <div class="loader-bar"></div>
            <div class="loader-bar"></div>
            <div class="loader-ball"></div>
        </div>
    </div>
    <!-- Loader ends-->
    <!-- page-wrapper Start-->
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <img class="bg-img-cover bg-center" src="~/assets/images/login-image.png" alt="looginpage">
                <div class="login-card">
                    <form class="theme-form login-form needs-validation" method="post" novalidate="">
                        <h4>Тизимга кириш</h4>
                        <h6>Хуш келибсиз! Профилингизга киринг.</h6>
                        <div class="form-group">
                            <label>Ҳозирги парол</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="icon-email"></i></span>
                                <input type="password" id="passw" asp-for="Input.OldPassword" class="form-control passw" placeholder="*******" required="" />
                                <div class="invalid-tooltip">Илтимос, амалдаги паролни киритинг!</div>
                                <div class="show-hide"><span class="fa fa-eye"></span></div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label>Янги парол</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="icon-lock"></i></span>
                                <input id="newP" asp-for="Input.NewPassword" type="password" class="form-control passw" placeholder="*******" required="" />
                                <div class="invalid-tooltip">Илтимос, паролни киритинг!</div>
                                <div class="show-hide"><span class="fa fa-eye"></span></div>
                                <span id="validationError" asp-validation-for="Input.NewPassword" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label>Янги паролни тасдиқланг</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="icon-lock"></i></span>
                                <input id="confP" asp-for="Input.ConfirmPassword" type="password" class="form-control passw" placeholder="*******" required="" />
                                <div class="invalid-tooltip">Илтимос, паролни киритинг!</div>
                                <div class="show-hide"><span class="fa fa-eye"></span></div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="checkbox">
                                <input id="checkbox1" type="checkbox">
                                <label class="text-muted" for="checkbox1">Паролни эслаб қолиш</label>
                            </div>
                        </div>
                        <div class="form-group">
                            @if (Model.ErrorMessage != null)
                            {
                                <p id="error" style="color:red"><i class="fa fa-ban"></i> @Model.ErrorMessage</p>
                            }
                            <p id="confError" hidden style="color:red"><i class="fa fa-ban"></i> Паролни нотўғри тасдиқладингиз!</p>
                            <button class="btn btn-primary btn-block" type="submit">Кириш</button>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
    <script>
        (function () {
            'use strict';
            window.addEventListener('load', function () {
                // Fetch all the forms we want to apply custom Bootstrap validation styles to
                var forms = document.getElementsByClassName('needs-validation');
                // Loop over them and prevent submission
                var validation = Array.prototype.filter.call(forms, function (form) {
                    form.addEventListener('submit', function (event) {
                        if (form.checkValidity() === false) {
                            event.preventDefault();
                            event.stopPropagation();
                        }
                        if($('#newP').val() != $('#confP').val()){
                            event.preventDefault();
                            event.stopPropagation();
                            $('#confError').removeAttr('hidden');
                        }

                        $('error').hide();

                        form.classList.add('was-validated');
                    }, false);
                });
            }, false);
        })();
    </script>
    <!-- latest jquery-->
    <script src="~/assets/js/jquery-3.5.1.min.js"></script>
    <!-- Bootstrap js-->
    <script src="~/assets/js/bootstrap/bootstrap.bundle.min.js"></script>
    <!-- feather icon js-->
    <script src="~/assets/js/icons/feather-icon/feather.min.js"></script>
    <script src="~/assets/js/icons/feather-icon/feather-icon.js"></script>
    <!-- scrollbar js-->
    <!-- Sidebar jquery-->
    <script src="~/assets/js/config.js"></script>
    <!-- Plugins JS start-->
    <!-- Plugins JS Ends-->
    <!-- Theme js-->
    <script src="~/assets/js/script.js"></script>
    <!-- login js-->
    <!-- Plugin used-->
</body>
</html>



